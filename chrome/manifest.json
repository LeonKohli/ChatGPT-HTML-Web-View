{
  "manifest_version": 3,
  "name": "ChatGPT Web Preview",
  "description": "Preview HTML, CSS, and JS code from ChatGPT.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "version": "1.1",
  "author": "JdM",
  "homepage_url": "https://www.rmbi.ch/jdm",
  "action": {
    "default_title": "ChatGPT Web Preview",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "*://*.chat.openai.com/*"
      ],
      "run_at": "document_idle"
    }
  ]
}